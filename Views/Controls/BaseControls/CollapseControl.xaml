<UserControl x:Class="SmartBalance.Views.Controls.BaseControls.CollapseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartBalance.Views.Controls.BaseControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="35"
             Cursor="Hand"
             ToolTip="Свернуть">

    <!-- Анимация при наведении -->
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="MouseEnter">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation To="40"
                                     Duration="0:0:0.2"
                                     Storyboard.TargetProperty="Width"/>
                    <DoubleAnimation To="25"
                                     Duration="0:0:0.2"
                                     Storyboard.TargetProperty="Height"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation To="40"
                             Duration="0:0:0.2"
                             Storyboard.TargetProperty="Width"/>
                    <DoubleAnimation To="20"
                             Duration="0:0:0.2"
                             Storyboard.TargetProperty="Height"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    
    <!-- CollapseControl -->
    <Grid>
        <Image Source="/Views/Resources/BaseControlsImages/CollapseControlImage.png"/>
    </Grid>
</UserControl>
