<Page x:Class="SmartBalance.Views.Pages.AddExpensesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartBalance.Views.Pages"
      xmlns:wpc="clr-namespace:SmartBalance.Views.Controls.PagesControls.WalletsPageControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddExpensesPage">

    <Grid>
        <Border Background="#1e1e1e" CornerRadius="10" BorderThickness="3">
            <WrapPanel Orientation="Vertical" 
                       Margin="10">

                <!-- Сумма -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <TextBlock Text="Сумма:" 
                               FontSize="30" FontFamily="Comic Sans MS"
                               Margin="0 0 10 0"
                               Foreground="White"
                               FontWeight="Bold"/>
                    <TextBox Width="170" Height="35"
                             Style="{StaticResource MaterialDesignTextBox}"
                             FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold"
                             Foreground="IndianRed"
                             PreviewTextInput="TextBox_PreviewTextInput">
                    </TextBox>
                </StackPanel>
                <!-- -->

                <!-- Кошельки -->
                <TextBlock Text="Кошельки:" 
                           FontSize="30" FontFamily="Comic Sans MS"
                           Margin="0 0 10 0"
                           Foreground="White"
                           FontWeight="Bold"/>
                <WrapPanel>
                    <wpc:CashControl x:Name="CashControl"
                                     PreviewMouseLeftButtonDown="CashControl_PreviewMouseLeftButtonDown"/>
                    <wpc:CardControl x:Name="CardControl"
                                     PreviewMouseLeftButtonDown="CardControl_PreviewMouseLeftButtonDown"/>
                </WrapPanel>
                <!-- -->

                <!-- Комментарий -->
                <TextBlock Text="Комментарий:" 
                           FontSize="30" FontFamily="Comic Sans MS"
                           Margin="0 0 10 0"
                           Foreground="White"
                           FontWeight="Bold"/>
                <TextBox Width="300" Height="160"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold"
                         TextWrapping="Wrap"
                         Foreground="White"/>
                <!-- -->

                <!-- Дата -->
                <StackPanel>
                    <TextBlock Text="Дата:" 
                               FontSize="30" FontFamily="Comic Sans MS"
                               Foreground="White"
                               Margin="20 0 0 0"
                               FontWeight="Bold"/>
                    <Calendar HorizontalAlignment="Left" VerticalAlignment="Stretch"
                              Width="250" Height="300"
                              Margin="20 0 0 0"/>
                </StackPanel>
                <!-- -->

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal"
                            Margin="20 12 0 0">
                    <Button x:Name="CancellationButton"
                            Height="30" Width="100"
                            Content="Отмена"
                            Margin="0 0 50 0"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="CancellationButton_Click"/>
                    <Button x:Name="SaveButton"
                            Height="30" Width="100"
                            Content="Сохранить"/>
                </StackPanel>
                <!-- -->
            </WrapPanel>
        </Border>
    </Grid>
</Page>
