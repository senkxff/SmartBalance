<Page x:Class="SmartBalance.Views.Pages.AddIncomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartBalance.Views.Pages"
      xmlns:wpc="clr-namespace:SmartBalance.Views.Controls.PagesControls.WalletsPageControls"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="AddIncomePage">

    <Grid>
        <Border Background="#1e1e1e" 
                CornerRadius="10" 
                BorderThickness="3">
            <WrapPanel Orientation="Vertical" 
                       Margin="20 10 10 15">

                <!-- Сумма -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Left" VerticalAlignment="Stretch">
                    <TextBlock Text="Сумма:" 
                               FontSize="30" FontFamily="Comic Sans MS"
                               Margin="0 0 10 0"
                               Foreground="White"
                               FontWeight="Bold"/>
                    <TextBox Width="130" Height="35"
                             Style="{StaticResource MaterialDesignTextBox}"
                             FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold"
                             Foreground="YellowGreen"
                             PreviewTextInput="TextBox_PreviewTextInput">
                    </TextBox>
                </StackPanel>
                <!-- -->

                <!-- Кошельки -->
                <TextBlock Text="Кошельки:" 
                           FontSize="30" FontFamily="Comic Sans MS"
                           Margin="0 0 10 0"
                           Foreground="White"
                           FontWeight="Bold"/>
                <WrapPanel>
                    <wpc:CashControl x:Name="CashControl"
                                     PreviewMouseLeftButtonDown="CashControl_PreviewMouseLeftButtonDown"/>
                    <wpc:CardControl x:Name="CardControl"
                                     PreviewMouseLeftButtonDown="CardControl_PreviewMouseLeftButtonDown"/>
                </WrapPanel>
                <!-- -->

                <!-- Комментарий -->
                <TextBlock Text="Комментарий:" 
                           FontSize="30" FontFamily="Comic Sans MS"
                           Margin="0 0 10 0"
                           Foreground="White"
                           FontWeight="Bold"/>
                <TextBox Width="250" Height="120"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontFamily="Comic Sans MS" FontSize="20" FontWeight="Bold"
                         TextWrapping="Wrap"
                         Foreground="White"
                         Margin="0 0 20 10"/>
                <!-- -->

                <!-- Дата -->
                <StackPanel>

                    <Calendar HorizontalAlignment="Left" VerticalAlignment="Stretch"
                               Width="250" Height="300"/>
                </StackPanel>
                <!-- -->

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal"
                            Margin="0 15 0 0">
                    <Button x:Name="CancellationButton"
                            Height="30" Width="100"
                            Content="Отмена"
                            Margin="0 0 50 0"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="CancellationButton_Click"/>
                    <Button x:Name="SaveButton"
                            Height="30" Width="100"
                            Content="Сохранить"/>
                </StackPanel>
                <!-- -->
            </WrapPanel>
        </Border>
    </Grid>
</Page>
